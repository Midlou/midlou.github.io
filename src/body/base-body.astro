---
interface Props {
	title: string;
}

const { title } = Astro.props;

// styles
import "../styles/index.css";
import "../styles/glow-hover.css";
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		{
			import.meta.env.PROD ? 
				<>
					<script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-8R0WVPYEFP"></script>
					<script type="text/partytown">
						window.dataLayer = window.dataLayer || [];
						function gtag() {
							dataLayer.push(arguments);
						}
						gtag("js", new Date());

						gtag("config", "G-8R0WVPYEFP");
					</script>
				</> 
			: null
		}

		<meta charset="UTF-8" />
		<meta name="description" content="A site with my personal portfolio." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/mid-icon-light-1.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-600">
		<slot />
	</body>
</html>
